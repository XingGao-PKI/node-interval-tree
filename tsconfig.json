{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es2020",
      "scripthost",
      "es2015.collection",
      "es2015.iterable"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "lib"
  },
  "include": ["./"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
